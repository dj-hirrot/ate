<div class="container">
  <h2>ATEへようこそ!</h2>
  <p>新規登録(無料)して利用を開始しましょう。</p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email,
        class: "form-control #{'is-invalid' if resource.errors.messages[:email].any?}",
        autofocus: true,
        autocomplete: "email" %>
      <% resource.errors.messages[:email].each do |error| %>
        <div class="invalid-feedback"><%= "メールアドレス#{error}" %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password,
        class: "form-control #{'is-invalid' if resource.errors.messages[:password].any?}",
        autocomplete: "new-password" %>
      <% resource.errors.messages[:password].each do |error| %>
        <div class="invalid-feedback"><%= "パスワード#{error}" %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation,
        class: "form-control #{'is-invalid' if resource.errors.messages[:password_confirmation].any?}",
        autocomplete: "new-password" %>
      <% resource.errors.messages[:password_confirmation].each do |error| %>
        <div class="invalid-feedback"><%= "確認用パスワード#{error}" %></div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-dark' %>
    </div>
  <% end %>
</div>

<hr>

<div class="container">
  <%= link_to 'パスワードを忘れた場合', new_user_password_path %><br>
  <%= link_to '確認メールが届かない場合', new_user_confirmation_path %>
</div>
