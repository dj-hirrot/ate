<div class="container">
  <h2>パスワード再設定</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email,
        class: "form-control #{'is-invalid' if resource.errors.messages[:email].any?}",
        autofocus: true,
        autocomplete: "email" %>
      <% resource.errors.messages[:email].each do |error| %>
        <div class="invalid-feedback"><%= "メールアドレス#{error}" %></div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "パスワード再設定用のメールを送る", class: 'btn btn-warning text-white' %>
    </div>
  <% end %>
</div>
