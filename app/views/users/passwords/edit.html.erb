<div class="container">
  <h2>パスワードを再設定してください</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "新しいパスワード" %>
      <%= f.password_field :password,
        class: "form-control #{'is-invalid' if resource.errors.messages[:password].any?}",
        autocomplete: "new-password" %>
      <% resource.errors.messages[:password].each do |error| %>
        <div class="invalid-feedback"><%= "パスワード#{error}" %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation,
        class: "form-control #{'is-invalid' if resource.errors.messages[:password_confirmation].any?}",
        autocomplete: "new-password" %>
      <% resource.errors.messages[:password_confirmation].each do |error| %>
        <div class="invalid-feedback"><%= "確認用パスワード#{error}" %></div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードを変更する", class: 'btn btn-warning text-white' %>
    </div>
  <% end %>
</div>
